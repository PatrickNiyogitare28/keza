{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "composite": true,
      "strict": true,
      "baseUrl": ".",
      "alwaysStrict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "lib": ["es2017", "es7", "es6", "dom"],
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]

  }